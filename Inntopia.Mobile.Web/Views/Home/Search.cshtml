@model Inntopia.Mobile.Web.Models.SearchResponse

@{
    ViewBag.Title = "Search";
}


    <ul data-role="listview" data-filter="true">
        @foreach (var location in Model.Locations)
        {
            <li data-role="list-divider">@location.Name<span class="ui-li-count">@location.Products.Count()</span></li>
            foreach (var product in location.Products)
            {
                <li data-theme="c"><a href="#">
                    <h3>@product.Name</h3>
			        <!--<p><strong>You've been invited to a meeting at Filament Group in Boston, MA</strong></p>-->
			        <p>@product.Description</p>
                    @if(product.TotalPrice != 0) {
    			        <p class="ui-li-aside"><strong style="color:green;">@String.Format("{0:C}", product.TotalPrice)</strong> @product.Currency</p>
                    }
                    </a>
                </li>
            }
        }
    </ul>
<br />



