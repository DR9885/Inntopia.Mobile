@model IEnumerable<Inntopia.Mobile.Data.SuperCategory>

@{
    ViewBag.Title = "SuperCategoryNavbar";
}




@if(Model.Count() != 0) {
@Html.Partial("_CategoryNavbar", Model.FirstOrDefault().Categories)



<div data-role="navbar" data-iconpos="top">
	<ul class="super-category list">
		@foreach (Inntopia.Mobile.Data.SuperCategory item in Model)
        {
            <li "@item.ID">
                @Html.ActionLink(item.ShortName, "Search", "Home", new { 
                    @data_icon = item.Icon, 
                    @data_iconpos = "left" } )
            </li>
        }
	</ul>
</div><!-- /navbar -->
}
